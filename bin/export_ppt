use FindBin;
use lib "$FindBin::Bin/../lib";

use strict;
use warnings;

use HSDB4::Constants;
use HSDB45::Course;

my $dest_dir = shift || '/data/temp/export/ppt';

our %exported = ();

my $dbh = HSDB4::Constants::def_db_handle();
my $sql = qq(
    SELECT vc.course_id, vc.title
    FROM tusk.academic_level al, tusk.academic_level_course alc, tusk.course c, hsdb45_vet_admin.course vc
    WHERE al.academic_level_id = alc.academic_level_id
    AND c.school_course_code = vc.course_id
    AND alc.course_id = c.course_id
    AND al.school_id = 3
    ORDER BY vc.oea_code
);
my $sth = $dbh->prepare($sql);
$sth->execute();
my $results = $sth->fetchall_arrayref();
$sth->finish();

foreach my $result (@$results) {
    my $course_id = $result->[0];
    my $title = safe($result->[1]);

    my $path = "$dest_dir/$title-$course_id";
    my $course = HSDB45::Course->new(_school => 3)->lookup_key($course_id);
    export($course_id, $path, $course->child_content());
}

sub export {
    my $course_id = shift;
    my $path = shift;

    foreach my $content (@_) {
        my $content_id = $content->content_id();
        next if $exported{"$course_id/$content_id"};
        $exported{"$course_id/$content_id"} = 1;
        my $type = $content->type();
        my $title = safe($content->title());
        if ($type =~ /Collection|Multidocument/) {
            export($course_id, "$path/$title-$content_id", $content->child_content())
        } elsif ($type eq 'DownloadableFile') {
            my $file = $content->out_file_path();
            if ($file =~ m/^.*\.pp[st]x?$/i) {
                my $name = $file;
                $name =~ s/\/.*\///;
                $name = "$title-$name";
                system("mkdir -p $path && cp -pv $file $path/$name");
            }
        }
    }
}

sub safe {
        my $title = shift || 'Untitled';

        $title =~ s/<.+?>//g;
        $title =~ s/\W+/_/g;
        $title =~ s/^_|_$//g;

        return $title;
}

