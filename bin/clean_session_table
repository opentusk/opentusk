#!/usr/bin/env perl -l

use FindBin;
use lib "$FindBin::Bin/../lib";

use HSDB4::Constants;

my $days = shift || 3;
my $dbh = HSDB4::Constants::def_db_handle('_session');
my $sql = "DELETE FROM hsdb4.sessions WHERE modified_on < DATE_SUB(NOW(), INTERVAL $days DAY)";

die "Error: Could not delete!\n" unless ($dbh->do($sql));
$dbh->disconnect();
