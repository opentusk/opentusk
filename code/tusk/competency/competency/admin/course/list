<%perl>
	my $dbh = HSDB4::Constants::def_db_handle();

	$school = $m->comp("/tmpl/url:get_school");
	$school_id = TUSK::Core::School->new->getSchoolID($school);
	my $tusk_course_id = TUSK::Course->getTuskCourseIDFromSchoolID( $school_id, $hsdb45_course_id);
	my $current_course = HSDB45::Course->new(_school => $school)->lookup_key( $hsdb45_course_id )->{'title'};


	foreach( @{TUSK::Competency::Competency->lookup()} ) {
		$competencies->{$_->getCompetencyID} = $_;
	}

	my $tusk_courses = TUSK::Course->lookup("school_id =". $school_id);
	
</%perl>

<%perl>
	my $course_competencies = TUSK::Course->getCompetenciesByCourse( $tusk_course_id );
	
	my $col_fields = [
			{ label => __('Course Competency'), field => 'learning_objective' },
			{ label => __('Linked'), field => 'linked_competencies', html => 1 },
			{ label => __('Action'), field => 'action' },
	];

	my @rows = ();

	foreach my $competency ( @{$course_competencies} ){
		my $competency_desc = $competency->getDescription;
		my $competency_id = $competency->getPrimaryKeyID;
		my ($linked_school_competencies, $linked_school_competencies_short) = linked_school_competencies( $competency_id );
		my $linked_school_competencies_display = "<span class=\"tusk-competency-popup\"><span class=\"competency_popup_container\"><a>". $linked_school_competencies_short . "</a><span class=\"competency_popup_content\">
<span class=\"linked_competency_close_button\">[CloseDialog]</span><h3>School Competencies linked to</h3><i>\"". $competency->getDescription . "\"</i>:<br><br>". $linked_school_competencies ."</span></span></span>";
		push @rows, { 
			learning_objective => $competency_desc,
			linked_competencies => $linked_school_competencies_display,
			action => "<a href=\"#\" onclick=\'linkCourseSchool( \"$competency_desc\", \"$competency_id\" ); currentCompLabel(\"$competency_desc\"); \' >Link/Unlink Competencies</a>",
		};
	}

</%perl>

<& /tmpl/element:object_selection_box, params =>{
				columns => $col_fields,
				rows => \@rows,
				name => "courses",
				'norows-message' => __( "No Course Competencies Available" ),
} &>

