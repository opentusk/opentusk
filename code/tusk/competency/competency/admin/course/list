<div id="link-dialog-wrapper">
<div id="link_competency_title">
Link Competency '<span id="currentComp"></span>' to:
</div>
<div id="link-dialog" title="Link Competencies"></div>
</div>

<%perl>
sub linked_school_competencies {
	my $competency_id1 = $_[0];
	
	my $dbh = HSDB4::Constants::def_db_handle();

	my $competency_args= {
		competency_id => $competency_id1,
	};

	my $this_competency = TUSK::Application::Competency::Competency->new( $competency_args );
	my $school_competencies = $this_competency->getLinked;

	my $all_linked_competencies_short = "";
	my $all_linked_competencies = "";
	my $index = 0;
	foreach my $school_competency( @{ $school_competencies } ){
		$index++;
		if ($index < 5){
			$all_linked_competencies_short .= $index. ". " . (substr $school_competency->getTitle, 0, 50) . "....<br>";
		}
		$all_linked_competencies .= $index. ". " . $school_competency->getTitle . "<br>";
	}
	if ( $index == 0 ) { 
		$all_linked_competencies .= "<i>None</i><br>";
		$all_linked_competencies_short .= "<i>None</i><br>";
	}
	elsif ($index >= 5){
		$all_linked_competencies_short .= "<b><i>...." . ($index - 4) . " more relationships</i></b><br>";
	}
	return $all_linked_competencies, $all_linked_competencies_short;
}
</%perl>
