% my $user = $m->session->{'user'};
% my $new_cnt = $user->count_new_announcements();
% my $new_ann_txt = ($new_cnt)? "($new_cnt new)" : '';

% my $school = TUSK::Core::School->new->lookupReturnOne("school_name = '" . $user->affiliation() . "'");
% my $school_name = ($school && $school->getPrimaryKeyID())? $school->getSchoolDisplay() : '';
% my $accesskey = 1;

<ol class="homeNav">
	<li><a href="/mobi/view/announcements" accesskey="<% $accesskey++ %>"><%__("Announcements")%></a> <span class="newAnn"><% $new_ann_txt %></span></li>
	<li><a href="/mobi/view/schedule/schedule" accesskey="<% $accesskey++ %>"><%__("Schedule")%></a></li>
	<li><a href="/mobi/view/courselist" accesskey="<% $accesskey++ %>"><%__("My Courses")%></a></li>
% if($school_name){
	<li><a href="/mobi/view/schoolcourses/<% $school->getPrimaryKeyID() %>" accesskey="<% $accesskey++ %>"><%__("All")%> <% $school_name %> <%__("Courses")%></a></li>
	<li><a href="/mobi/forum/forumshow"><%__("Discussions")%></a> </li>
	<li><a href="/protected/patientlog/student/home"><%__("Patient Logs")%></a> </li>
	<li><a href="/mobi/flashcard/home"><%__("Flash Cards")%></a> </li>
% }
	<li class="xtraspace"><a href="/dologout?request_uri=/mobi/home?<% HSDB4::DateTime->new()->out_unix_time %>" accesskey="<% $accesskey++ %>"><%__("Logout")%></a></li>
</ol>

