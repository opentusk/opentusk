</%method>


<%method print_author_courses>
<%perl>
	my (@author_courses, @committees);
	foreach my $course ($user->author_courses()) {
		if ($course->type() eq 'committee' || $course->type() eq 'thesis committee') {
			push @committees, $course;
		} elsif ($course->type() eq 'community service' or $course->type() eq 'course') {
			push @author_courses, $course;
		}  
	}
</%perl>

% if (@author_courses || @committees){
<!-- section with speficically linked courses as an author (link_course_user) -->
<h4 class="homepageHdr">Course Admin</h4>
<ul class="gNoBullets courseList">
%	foreach my $course (@author_courses){
<li><a href="<% $link_prefix %>/<% $course->school ."/". $course->primary_key %>"><% $course->out_label %></a> (<% $course->school %>)</li>
%	}
%	if (!@author_courses) {
<li><em><% __('No Courses') %></em></li>
%	}
</ul>
<h4 class="homepageHdr">Committees</h4>
<ul class="gNoBullets courseList">
%	foreach my $committee (@committees){
<li><a href="<% $link_prefix %>/<% $committee->school ."/". $committee->primary_key %>"><% $committee->out_label %></a> (<% $committee->school %>)</li>
%	}
%	if (!@committees) {
<li><em><% __('No Committees') %></em></li>
%	}
</ul>

% }

</%method>

