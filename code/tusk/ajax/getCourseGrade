<%perl>
	foreach my $course_quiz(@{$course_quizzes}) {
		if (exists $completed_quizzes{$course_quiz->getEventName()}) {
			print "<tr>";
			print "<td class=\"html_row\">" . $course_quiz->getEventName() ."</td>";
			print "<td class=\"html_row\">" . $completed_quizzes{$course_quiz->getEventName()}{grade} ."</td>";
