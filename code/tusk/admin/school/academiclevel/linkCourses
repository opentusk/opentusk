<%attr>
	no_check_path 	=> 1
</%attr>

<%shared>
	my ($school, $school_id, $type_selected);
</%shared>

<div style = "padding: 5px 0 5px 0 ">
<i>
Select the <b>Academic Level(s)</b> a <b>course</b> is a part of. If the course is a part of multiple academic levels,
select multiple options on the selection dropdown menu.
</i>
</div>

<%perl>
	$school = $m->comp("/tmpl/url:get_school");
	$school_id = TUSK::Core::School->new->getSchoolID($school);
	my $tusk_courses = TUSK::Course->lookup("school_id =". $school_id);
	my %tusk_courses_hash = map {$_ -> getPrimaryKeyID() => $_ -> getSchoolCourseCode()} @{$tusk_courses};

	my @hsdb45_courses = HSDB45::Course->new(_school => $school)->lookup_all();
	my %hsdb45_courses_hash = map {$_->{'course_id'} => $_->{'title'}} @hsdb45_courses;	

	my %academic_levels = map {$_->getPrimaryKeyID() => $_->getDescription()} @{TUSK::AcademicLevel->lookup('school_id='. $school_id)};
</%perl>

<%perl>
	my $col_fields = [
			{label => __('Courses'), field => 'courses', html=> 1},
			{label => __('Academic Level'), field => 'action', align => 'center'},
	];

	my @rows = ();
	my (@unsorted_rows, @sorted_rows);
	my @options;

	while ( my ($title, $description) = each %academic_levels) {
		my %temp_hash = {};
		$temp_hash{'label'} = $description;
		$temp_hash{'value'} = $title;
		push @options, {%temp_hash};
	}


	my $action_params = { 
                                name => 'acad_level_dropdown',
				id => 'acad_level_dropdown',
				onchange => "adjustXtraFields(this, false); hide_error('type_error');",
                		options => \@options,
                                selected => $type_selected };			
	my $action = $m->scomp("/tmpl/element:dropdown", params => $action_params);

	foreach my $course (@hsdb45_courses) {
			my $trimmed_title = $course->{'title'};
			$trimmed_title =~ s/^\s+//;
			push @unsorted_rows, {
				courses => "<a href=\"/management/course/display/".$school."/".$course->{ 'course_id' }."\">".$course->{'title'}."</a>",
				action => $action,
				course_title => $trimmed_title,
			};				
	}	

	@sorted_rows = sort { lc($a->{course_title}) cmp lc($b->{course_title})} @unsorted_rows;

	push (@rows, @sorted_rows);

</%perl>

<& /tmpl/element:object_selection_box, params => {
				columns => $col_fields,
				rows => \@rows,
				name => "courses",
				'norows-message' => __( "No Courses Availabe" ),
} &>

<%method startup>
%	$m->comp("SELF:set_no_cache");
</%method>

<%method jsarray>
<%perl>
	return [ 
			"jquery/jquery.min.js",
			"jquery/plugin/interface/interface.js",
			"jquery/plugin/json.js",
			"jquery/plugin/inestedsortable-1.0.1.pack.js",
			];
</%perl>
</%method>

<%method stylearray>
% return ['/style/style.css']
</%method>

<%method red_header_text>
% return $m->comp( "SELF:title" );
</%method>

<%method title>
% return __( "Link Courses to Academic Level(s)" );
</%method>