<%attr>
	use_dynamic_wrapper => 0
</%attr>

<%shared>
	my $school          = $m->comp("/tmpl/url:get_school");
	my $type_object     = $m->comp("/tmpl/url:get_type_object");
	my $self_path       = "school/" . $school;
	my $time_periods;
	my $usergroup;
	my @rowheaders;
	my %data;
</%shared>

<%perl>
	my $dbh = HSDB4::Constants::def_db_handle();
	my $school_obj = TUSK::Core::School->lookupReturnOne("school_name = lcase('$school')");	
	my $school_db = $school_obj->getSchoolDb();
	
	my $sql = qq(SELECT DISTINCT academic_year FROM $school_db\.time_period ORDER BY academic_year DESC);
	my $sth = $dbh->prepare($sql);
	$sth->execute();
	my $academic_years = $sth->fetchall_arrayref;	
	$sth->finish;
	
	my @academic_year_array;

	foreach my $academic_year (@{$academic_years}){
		my %temp_hash;
		$temp_hash{'label'} = $academic_year->[0];
		$temp_hash{'value'} = $academic_year->[0];
		push @academic_year_array, {%temp_hash};
		undef %temp_hash;
	}
	
	my $years = [map {id => $_->getPrimaryKeyID, name => $_->getTitle}, @{TUSK::AcademicLevel::Year->lookup()}];
	
	my @current_time_periods = HSDB45::TimePeriod->new( _school => $school )->lookup_conditions("academic_year = 2001");
	foreach my $current_time_period (@current_time_periods) {
		my %temp_hash;
		$temp_hash{'name'} = $current_time_period->field_value("period");
		$temp_hash{'id'} = $current_time_period->field_value("time_period_id");
		push @rowheaders, {%temp_hash};
		undef %temp_hash;
	}
</%perl>

<& /tmpl/element:form, params => {
				method => 'POST',
				onsubmit =>undef,
				name => 'timeperiodyear',
				} &>


<& /tmpl/element:field_display, params => { 	
	value => $m->scomp("/tmpl/element:checkbox_table", objects => \@academic_year_array, formname => 'academic_years', checkboxname => 'default_report', allchecked => 0, showcheckall => 1 ),
} &>

<& /tmpl/element:save_button, params=>{label=>__('Update Time Periods'),
				no_cancel_button => 1,
				name=>'submit'} &>
</form>


<& /tmpl/element:scrollable_display_table, table_id => "time_period_year",
				corner_text => 'Time Period',
				zebra_striping => 1,
				cell_data => \%data,
				colheaders => [$years],
				rowheaders => [\@rowheaders]&>
</table>


</div>

<%method jsarray>
<%perl>
	return [
		'jquery/jquery.min.js',
		'jquery/plugin/scrollablefixedheadertable/scripts/wrapper.min.js',
	];
</%perl>
</%method>

<%method stylearray>
<%perl>
	return [
		'/style/style.css',
		'/style/calendar-blue.css',
		'/scripts/jquery/plugin/scrollablefixedheadertable/css/scrollableFixedHeaderTable.css',
		'/style/studentcourse.css',
	];
</%perl>
</%method>

<%method get_timeperiods>
%	return $time_periods;
</%method>

<%method red_header_text>
%	return $m->comp( "SELF:title" );
</%method>

<%method title>
%	return __('Associate Time Periods with Years');
</%method>

