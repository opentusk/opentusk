<%method right_header_text>
<%perl>
	my $links = [ 
		{ url => '', onclick => "window.open('/hsdb4/content/" . $TUSK::Constants::HelpMap{ PatientLogs } . "');return false;", txt => __("Help") },
		{ url => '', onclick => "window.open('/patientlog/preview/" . $m->comp("/tmpl/url:get_type_path") . '/'. $m->comp('/tmpl/url:get_last_path_id') . "');return false;", txt => __("Preview") },
		{ url => '/patientlog/director/export/' . $m->comp("/tmpl/url:get_type_path") . "/$form_id?rtype=$params{rtype}" . $concat_extra_query_string, txt => "Export" },
	];
	if ($params{rtype} eq 'ts') {
		unless (ref $params{tpid} eq 'ARRAY') {
			push @$links, { url => '/patientlog/director/export/' . $m->comp("/tmpl/url:get_type_path") . "/$form_id?rtype=ssc" . $concat_extra_query_string, txt => __("Export All Students") },
		}
	}
	return $links;
</%perl>
</%method>


