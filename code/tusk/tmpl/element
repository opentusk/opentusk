%					my $value = $cell_data->{$rowheader->{id}}->{$colheader->{id}}->{$colheaders->[1]->[$innercounter + $colcounter]->{id}} || $default_value;
	<td nowrap="nowrap" class="<% $cell_css->{$rowheader->{id}}->{$colheader->{id}}->{$colheaders->[1]->[$innercounter + $colcounter]->{id}} %>"><span class="outer"><% $value %></span></td>
%				}
