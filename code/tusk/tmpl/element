%	my $stripObj = TUSK::Application::HTML::Strip->new();
%	for (my $i=0; $i < @{$params{'columns'}}; $i++) {
%		my $col = ${$params{'columns'}}[$i];
%		my $align = $col->{'align'} || "left";
