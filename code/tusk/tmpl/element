$colheaders					# reference for array of arrays of column headers hashes {id =>, name => }
$rowheaders					# reference for array of arrays of row headers {id =>, name => }
</%args>

% push(@$table_classes, "scrollableFixedHeaderTable");
<& SELF:table, params => { border =>"0", cellspacing =>"1", cellpadding =>"0", width => 'auto', id => $table_id, class => join(" ", @$table_classes)} &>
<thead>
% ## display first header row and, if it exists, the second header row
%	my ($colspan, $colspan_text);
