						$m->print($stripObj->removeHTML($row->{$col->{'field'}}));
					}
					if ($col->{'link'}) {
						$m->print( '</a>' );
					}
				}
			}
</%perl>
			</td>
%	} ## loop each column

% if (!defined($params{'action_columns'})){
% 	if (defined ($params{'modify_link'}) && defined($params{'delete_link'})) {
<td class="<% $td_class %>-center" nowrap>
