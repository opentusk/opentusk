style="<% $params{'style'} %>"
<% $title %>>
% my ($label,$value,$style,$disabled);
% my $option_class = 'view';
% my $stripObj = TUSK::Application::HTML::Strip->new();
% foreach my $opt (@{$params{'options'}}) {
<%perl>
	if (ref($opt) eq 'HASH'){
		$label = $opt->{'label'};
		$value = $opt->{'value'};
		$option_class = $opt->{'class'} if exists $opt->{'class'} ;
		$disabled = ($opt->{disabled})? 'disabled ' : '';
		if ($selectedHash->{$value}){
			$selected = ' selected ';
		} else {
			$selected = '';
