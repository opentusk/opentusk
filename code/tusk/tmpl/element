		$style = ($opt->{'cat'}) ? 'background-color:#afc9e3;' : '';
		$style .= ($opt->{'level'}) ? 'margin-left:' . (.2*$opt->{'level'}) . 'in;' : '';
		$style .= ($opt->{'style'}) ? $opt->{'style'} : '';

