%	}
<tr class="header">
	<th class="first" nowrap="nowrap"><span class="outer"><% $corner_text %></span></th>
%	foreach my $colheader (@{$colheaders->[0]}) {
	<th<% $colspan_text %> nowrap="nowrap"><span class="outer"><% $colheader->{name} %></span></th>
%	}
</tr>
%	if ($colheaders->[1]) {
<tr class="header">
	<th class="first" nowrap="nowrap"><span class="outer">&nbsp;</span></th>
%	foreach my $colheader (@{$colheaders->[1]}) {
	<th nowrap="nowrap"><span class="outer"><% $colheader->{name} %></span></th>
%	}
</tr>
%	}
</thead>
% ## display row header and data cells
<tbody>
%	my $class;
%	my $rowcounter = 0;
%	foreach my $rowheader (@{$rowheaders->[0]}) {
