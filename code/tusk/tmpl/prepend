<a href="#" target="_top">\
% }
<img alt="<% $TUSK::Constants::SiteAbbr %>: <% $TUSK::Constants::SiteName %>" src="<% ($type eq 'login') ? $TUSK::Constants::Logo{Large} : $TUSK::Constants::Logo{Small} %>">
</a></h1>
</hgroup>
</%method>


