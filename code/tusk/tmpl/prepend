		    <li class="<% $active eq 'browse'? 'selected' : '' %>"><a href="/view/courses" target="_top"><% __('All Courses') %></a></li>
			<li class="<% $active eq 'search'? 'selected' : '' %>"><a href="/search/form" target="_top"><% __('Search') %></a></li>
% if(scalar keys %$has_schedule) {
