<%args>
    $school
    $rowIndex
    $currentTeachingSite
    $currentCourse
</%args>

<%once>
	use TUSK::Application::Schedule::Clinical;
</%once>

<%shared>
    my @teachingSites = ();
</%shared>

<%init>
    my $modificationValues = TUSK::Application::Schedule::Clinical->new({
        school_id => $school->getPrimaryKeyID(), 
        school_db => $school->getSchoolDb()
    });
	@teachingSites = @{$modificationValues->getStudentModificationTeachingSites($currentCourse)};

	$m->comp('SELF:.prepareTeachingSitesDropdown', rowIndex => $rowIndex, currentTeachingSite => $currentTeachingSite);
</%init>


<%method .prepareTeachingSitesDropdown>
<%args>
  $rowIndex
  $currentTeachingSite
</%args>
<%perl>
    my @dropdownOptions;

    push @dropdownOptions, {
        'value' => 0,
        'label' => 'Select Teaching Site'
    };

    foreach my $teachingSite (@teachingSites){
        push @dropdownOptions, {
            'value' => $teachingSite->{'teachingSiteId'},
            'label' => $teachingSite->{'teachingSite'},
         };
    };

    $m->comp('/tmpl/element:dropdown', params => {
        options => \@dropdownOptions,
        onchange => "setTeachingSite($rowIndex)",
        selected => $currentTeachingSite,
        style => 'width: 100%;'
    });
</%perl>
</%method>