<%args>
    $academicLevel => 'Fourth Year';
    $school_id => 2;
    $school_db => "hsdb45_dent_admin";
</%args>

<%once>
    use TUSK::Application::Schedule::Clinical;
</%once>

<%shared>
    my @academicLevels = ();
</%shared>

<%init>
    my $filterValues = $m->comp('SELF:.getFilterValues', school_id => $school_id, school_db => $school_db);
    $m->comp('SELF:.prepareQueryBox', filterValues => $filterValues);
</%init>

<%doc>
    Get parameters to populate the front-end query box 
</%doc>
<%method .getFilterValues>
<%args>
  $school_id
  $school_db
</%args>
<%perl>
    my $filterValues = TUSK::Application::Schedule::Clinical->new({
        school_id => $school_id,
        school_db => $school_db
    })->getScheduleStudentsFiltering();

    return $filterValues;
</%perl>
</%method>

<%doc>
    Set a default academic level title to be shown before the user starts interacting with the 
    front-end query box 
</%doc>
<%method .setAcademicLevelValues>
<%args>
  $filterValues
</%args>
<%perl>
    foreach my $filterValue (@{${$filterValues}[0]->getJoinObjects('t2')}) {
        push @academicLevels, $filterValue->getTitle();
    };
    pre_dump(${@academicLevels}[-1]);
    return;
</%perl>
</%method>

<%method .prepareQueryBox>
<%args>
  $filterValues
</%args>
<%perl>
    $m->comp('SELF:.setAcademicLevelValues', filterValues => $filterValues);

    my @buttons;
    # $buttons[0] = {'value' => 1};

    foreach my $academicLevel (@academicLevels) {
        push @buttons, {
            'value' => $academicLevel,
            'name' => $academicLevel
        };
    }

    $m->comp('/tmpl/element:radio_buttons', params => {buttons => \@buttons, name => "Academic Level", label => "Academic Level"});
    return;
</%perl>
</%method>
