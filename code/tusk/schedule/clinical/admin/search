<%args>
    $school_id
    $school_db
</%args>

<%once>
    use TUSK::Application::Schedule::Clinical;
</%once>

<%shared>
    my @academicLevels = ();
    my @uniqueAcademicYears = ();
    my $currentAcademicYear;
    my $currentAcademicLevel;
</%shared>

<%init>
    my $filterValues = $m->comp('SELF:.getFilterValues', school_id => $school_id, school_db => $school_db);

    $m->comp('SELF:.setAcademicYearValues', filterValues => $filterValues);
    my $alreadySelected = 0;
    # Show the current academic year/level[either a default or a selected value]
    my %query = $m->request_args;
    if (scalar $query{'academicYear'}) {
        $currentAcademicYear = $query{'academicYear'};
        delete $query{'academicYear'};
        $alreadySelected = 1;
    } else {
        $currentAcademicYear = ${@uniqueAcademicYears}[-1];
    }
    
    $m->comp('SELF:.setAcademicLevelValues', filterValues => $filterValues);
    if (scalar $query{'academicLevel'}) {
        $currentAcademicLevel = $query{'academicLevel'};
        delete $query{'academicLevel'};
    } else {
        $currentAcademicLevel= ${@academicLevels}[-1];
    }

    $m->comp('SELF:.prepareQueryBox', alreadySelected => $alreadySelected);

</%init>

<%doc>
    Get parameters to populate the front-end query box 
</%doc>
<%method .getFilterValues>
<%args>
  $school_id
  $school_db
</%args>
<%perl>
    my $filterValues = TUSK::Application::Schedule::Clinical->new({
        school_id => $school_id,
        school_db => $school_db
    })->getScheduleStudentsFiltering();

    return $filterValues;
</%perl>
</%method>

<%method .setAcademicLevelValues>
<%args>
  $filterValues
</%args>
<%perl>
    foreach my $academicLevel (@{$filterValues->{'academicLevels'}}) {
        push @academicLevels, $academicLevel->getTitle();
    };
    return;
</%perl>
</%method>

<%perl>
sub unique {
    return keys %{ { map {$_=>1} @_ } }; # Mea culpa!
}
</%perl>

<%method .setAcademicYearValues>
<%args>
  $filterValues
</%args>
<%perl>
    my @academicYears;
    foreach my $timePeriod (@{$filterValues->{'timePeriods'}})
    {
        push @academicYears, $timePeriod->getAcademicYear();
    };
    @uniqueAcademicYears = unique(@academicYears);

    return;
</%perl>
</%method>

<%method .prepareAcademicYearDropdown>
<%args>
  $alreadySelected
</%args>
<%perl>
    my @dropdownOptions;

    # Default academic year
    # ..or put in another default value with: selected => ${\@uniqueAcademicYears}[1]
    push @dropdownOptions, {
            'value' => 'Select',
            'label' => 'Select'
    };
    
    foreach my $academicYear (@uniqueAcademicYears) {
        push @dropdownOptions, {
            'value' => $academicYear,
            'label' => $academicYear
        };
    }

    $m->comp('/tmpl/element:dropdown', params => {
        options => \@dropdownOptions, 
        label => 'Academic Year',
        onchange => "location.href = '?academicYear=' + this.options[this.selectedIndex].value + '&academicLevel=" . $currentAcademicLevel . "'",
        selected => scalar $alreadySelected ? $currentAcademicYear : 'Select'
    });
</%perl>
</%method>

<%method .prepareAcademicLevelRadioButtons>
<%perl>
    my @buttons;

    foreach my $academicLevel (@academicLevels) {
        push @buttons, {
            'value' => $academicLevel,
            'name' => 'academicLevel',
            'text' => $academicLevel,
            'onclick' => "location.href = '?academicYear=" . $currentAcademicYear . "&academicLevel=' + this.value"       
        };
        if ($academicLevel == $currentAcademicLevel)
        {
            ${@buttons}[-1]{'checked'} = 1;
        }
    }

    $m->comp('/tmpl/element:radio_buttons', params => {
        buttons => \@buttons, 
        label => "Academic Level"
    });
</%perl>
</%method>

<%method .prepareQueryBox>
<%args>
    $alreadySelected
</%args>
<%perl>
    print('<table>');
    $m->comp('SELF:.prepareAcademicYearDropdown', alreadySelected => $alreadySelected);
    $m->comp('SELF:.prepareAcademicLevelRadioButtons');
    print('</table>');
    return;
</%perl>
</%method>

<%method getCurrentAcademicYear>
<%perl>
    return $currentAcademicYear;
</%perl>
</%method>

<%method getCurrentAcademicLevel>
<%perl>
    return $currentAcademicLevel;
</%perl>
</%method>