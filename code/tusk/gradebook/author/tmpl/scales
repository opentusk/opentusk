<%method show_linked_events>
<%args>
	$type_path
	$link_scale_events
	$school
</%args>

<%perl>
my $link_scale_events_arrayhash;

foreach my $link (@$link_scale_events) {
		my $event = TUSK::GradeBook::GradeEvent->lookupKey($link->getGradeEventID());
		my $tp_obj = HSDB45::TimePeriod->new( _school => $school)->lookup_key($event->getTimePeriodID());
		push(@$link_scale_events_arrayhash,{'name'=>$event->getEventName(), 'id'=>$event->getPrimaryKeyID(), 'timeperiod'=>$tp_obj->out_label()});
}	

</%perl>

<div><b> <%__("This scale is currently linked to")%> <% scalar(@$link_scale_events) %> <%__("Grade Event")%><% (scalar(@$link_scale_events) > 1) ? "s":"" %>. </b> </div> <br>
<div id="showlink"><a href="javascript:" onclick="showHideDiv('linkedevents');showHideDiv('showlink');showHideDiv('hidelink');" class="navsm"><%__("Show Linked Events")%></a></div>
<div id="hidelink" style="display:none;"><a href="javascript:" onclick="showHideDiv('linkedevents');showHideDiv('showlink');showHideDiv('hidelink');" class="navsm"><%__("Hide Linked Events")%></a></div>

<br>
<div id="linkedevents" style="display:none;">
<table><tr><td></td><td>
<%perl>

$m->comp("/tmpl/element:object_selection_box", params => { 
	sort_box => 0,
	columns => [ 
		{'label' => 'Name', 'field' => 'name'},
		{'label' => 'Time Period', 'field' => 'timeperiod', 'align'=>'center'},
	],
	action_columns => [ 
		{ 'label' =>'Modify','link' => '/gradebook/author/addedit' },
	],

	action_column_align => 'left',
	rows => $link_scale_events_arrayhash,
	type_path => $type_path,
	name => "scales",});


</%perl>
</td></tr></table>
<br>
</div>

</%method>
