	my $is_edit = 0;
	my $school = $m->comp("/tmpl/url:get_school");
	
	my ($event, $category, $time_period_id, $gb, $root_category, $category_id, $current_scale);
	
	my $school_id = TUSK::Core::School->new()->getSchoolID($school);
	my $scale_array = [];
</%shared>


