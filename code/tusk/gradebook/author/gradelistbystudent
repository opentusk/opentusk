<%once>
	use TUSK::GradeBook::GradeCategory;
	use TUSK::Core::School;
</%once>

<%shared>
	my $category_id = $m->comp("/tmpl/url:get_last_path_id");
	my $type_object = $m->comp("/tmpl/url:get_type_object");
	my $school_id = TUSK::Core::School->getSchoolID($type_object->school);
	my $user_id = $m->session->{'user'}->primary_key();
	my $course_id = $type_object->primary_key;
	my @site_director_sites;
	my $course_user = TUSK::Course::User->lookupReturnOne("course_id = $course_id and school_id = $school_id and user_id = '$user_id'", 
		undef, undef, undef, 
		[
				TUSK::Core::JoinObject->new("TUSK::Course::User::Site",
				{
						alias => 't2',
						jointype => 'right', 
						joinkey => 'course_user_id',
						origkey => 'course_user_id',
				}),
		]);
	for my $site (@{$course_user->getJoinObjects('t2')})
	{
		push @site_director_sites, ($site->getTeachingSiteID());
	}
	my $permissions = ($course_user ? $m->comp("/tmpl/permission:has_role_with_functionality", 
					feature_type_token => 'course',
					feature_id => $course_user->getPrimaryKeyID(),
					function_token => 'view_site_grades') : undef);
	my @students = $type_object->get_students($m->comp("SELF:get_timeperiod_id"), \@site_director_sites);
</%shared>

% if ($category_id) {
<div class="med"> <%__("Category:")%> <% TUSK::GradeBook::GradeCategory->lookupKey($category_id)->getGradeCategoryName() %> </div>
% } else {
<div align="right" style="margin-top:5px;">
<& SELF:print_gradebook_tools&>
</div>
% }

<table>
<& /tmpl/element:object_selection_box, params => {
	sort_box => 0,
	columns => [
		{ 'label' => __('Last Name'), width=> '200',  'field' => 'lastname'  },
		{ 'label' => __('First Name'), width=> '200', 'field' => 'firstname' },
        { 'label' => __('User ID'), 'field' => 'user_id' }
	],
	action_columns => [ $m->comp('SELF:get_action_link') ],
    object_list => \@students,
	type_path => $m->comp("/tmpl/url:get_type_path"),
	name => "student_list",
	nobutton => 1,
} &>
</table>

<%method get_action_link>
<%perl>
	my $permissions = ($course_user ? $m->comp("/tmpl/permission:has_role_with_functionality", 
				feature_type_token => 'course',
				feature_id => $course_user->getPrimaryKeyID(),
				function_token => 'view_site_grades') : undef);

	return ($category_id) 
		? { label => ($permissions ? 'View Grades' : 'View/Edit Grades'), link => '/gradebook/author/gradeaddeditbystudent', extra => '/' . $category_id }
		: { label => ($permissions ? 'View All Grade Events' : 'View/Edit All Grade Events'), link => '/gradebook/author/gradeaddeditbystudent'};
</%perl>
</%method>

<%method cms_min_course_role>
% 	return 'SITEDIRECTOR';
</%method>

<%method title>
%	($permissions ? return __("View By Student") : return __("View/Edit By Student"));
</%method>

<%method red_header_text>
% 	return $m->comp('SELF:title');
</%method>




