<%once>
	use TUSK::Quiz::Result;
</%once>

<%attr>
	allow_shib => '1'
</%attr>


<%shared>
	my $quiz_id = $m->comp('/tmpl/url:get_last_path_id');
	my $user_id = $m->comp('SELF:user');
	my $quiz_completed = 0; 
	my $next_url = $m->comp("/tmpl/url:construct_url", base_url => "/quiz/takequiz");
	my %args = $m->request_args();
	my $preview = ($args{preview}) ? $args{preview} : 0;
	my $quiz = ($preview) ? TUSK::Quiz::Quiz->lookupKey($quiz_id) : $m->comp("SELF:check_quiz_permission", quiz_id => $quiz_id, user_id => $user_id);
	my $duration_text = $quiz->getDurationText();
</%shared>


<%method startup>
<%perl>
 	if ($quiz->hasUserCompleted($user_id,$preview) && !$quiz->isSelfAssessment() && !$preview){
     		$quiz_completed = 1;
		$m->comp("SELF:set_msg", msg => __("You have already submitted this quiz"), type => 'err');
	}
</%perl>
</%method>


<%method right_header_text>
<%perl>
	if ($preview) {
		return [ 
		{ url => "/quiz/author/show/" . $m->comp("/tmpl/url:get_type_path"), txt => __("Manage Quizzes")},
		{ url => "/quiz/author/addedit/" . $m->comp("/tmpl/url:get_type_path") . "/" . $quiz_id, txt => __("Modify")},
		];
	} 

	return [];
</%perl>
</%method>


<%method get_nav_bars>
% 	return [];
</%method>

<%method check_cms_permissions>
% 	return 0;
</%method>

<%method title>
<%perl>
	my $title = __("Starting Quiz")." ".$quiz->getTitle();
	return $title;
</%perl>
</%method>

<%method nav_bar>
% 	return $m->comp("/quiz/tmpl/common:student_nav_bar");
</%method>

<%method red_header_text>
% 	return __("Quiz");
</%method>

