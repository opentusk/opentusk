<%shared>
 my ($battery_id, $exam_id) = $m->comp("/tmpl/url:get_path_ids");
 my $type_path = $m->comp('/tmpl/url:get_type_path');
 my $battery = TUSK::Case::Battery->lookupKey($battery_id);
</%shared>

<%attr>
hintmsg => __('Deleting will also delete any associated test values, sub tests, and sub test values.')
</%attr>

<%method title>
% return __("Delete Test");
</%method>

<%method get_nav_bar_objects >
% return {'TUSK::Case::Battery'=>$battery };
</%method>

<%once>
use TUSK::Case::Battery;
use TUSK::Case::Test;
</%once>

<%perl>
my $exam = TUSK::Case::Test->lookupKey($exam_id);
if (!$exam || !defined($exam->getPrimaryKeyID())){
	$m->comp("/case/tmpl/error",msg=>__x("Test {exam_id} not found", exam_id => $exam_id));
}
</%perl>
<& /tmpl/element:form, params => { 
                method => 'POST',
                name => 'examdelete',
                onsubmit => undef } &>

<& /tmpl/element:table, params => { width => "100%",
                border =>"0",
                cellspacing =>"0",
                cellpadding =>"0" } &>


<& tmpl/sections:exam_row,exam=>$exam, read_only=>'Y' &>

<%perl>
my $url = $m->comp("/tmpl/url:construct_url", 
                base_url => "/case/administrator/batteryaddedit", 
                type_path => $type_path,
                pathref => [ $battery_id ] );
</%perl>
<& /tmpl/element:save_button,params=>{name=>'delete_exam', 
					label=>__('Delete Test'),
					cancel_onclick=>"go_back('$url');"} &>
</form>
</table>

<%init>

if (defined($ARGS{'delete_exam'})){
	my $exam = TUSK::Case::Test->new()->lookupKey($exam_id);
	
	$exam->delete();
	
	$m->redirect("/case/administrator/batteryaddedit/$type_path/$battery_id/?msg=".__("Test successfully deleted")); 

}
</%init>
