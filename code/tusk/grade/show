<%once>
	use TUSK::GradeBook::GradeEvent;
	use Data::Dumper;
</%once>

<%shared>
	my $school_obj =  $m->comp("/tmpl/url:get_type_object");
	my $school_id = $school_obj->getPrimaryKeyID();
</%shared>

<%perl>
	my $event_type_id = 6;				## this can be set by input from the user later on, if necessary
	my %data;
	my $grade_events = TUSK::GradeBook::GradeEvent->lookup("school_id='$school_id' AND grade_event.grade_event_type_id = $event_type_id");
	%data = map { ($_->getTimePeriodID() => "1") } @$grade_events;
	foreach my $tp_id (keys %data) {
		 $data{$tp_id} = HSDB45::TimePeriod->new(_school => $school_obj->getSchoolName())->lookup_key($tp_id);
	}
</%perl>

<nav>
% if (scalar keys %data) {
	<form class="report">
	<input type="hidden" name="school_id" value="<% $school_id %>" />
   	<div class="filter active">
  		<label for="tp_id">Time Period(s)</label>
  		<select id="tp_id" name="tp_id" multiple="multiple">
% 	foreach my $tp_id (keys %data) {
	<option value="<% $tp_id %>"><% $data{$tp_id}->field_value('period') . ', ' . $data{$tp_id}->field_value('academic_year') . ' (' . $data{$tp_id}->field_value('start_date') . ' to ' . $data{$tp_id}->field_value('end_date') . ')'  %></option>
% 	}
  		</select>
   		<img src="/graphics/icons/waiting_bar.gif" class="waiting" />
 	<fieldset>
 		<input type="button" name="tp" value="reset" class="formbutton" />
 		<input type="button" name="tp-all" value="select all" class="formbutton" />
	</fieldset>
	</div>
 	<div class="filter">
  		<label for="course">Course(s)</label>
  		<select id="course" name="course" multiple="multiple" class="">
  		</select>
   		<img src="/graphics/icons/waiting_bar.gif" class="waiting" />
 	<fieldset>
 		<input type="button" name="course" class="formbutton" value="reset" />
 		<input type="button" name="course-all" class="formbutton" value="select all" />
	</fieldset>
	</div>
  	<div class="filter">
   		<label for="student">Student(s)</label>
 		<select id="student" name="student" multiple="multiple">
  		</select>
    	<img src="/graphics/icons/waiting_bar.gif" class="waiting" />
	<fieldset>
		<input type="button" name="student" class="formbutton" value="reset" />
 		<input type="button" name="student-all" class="formbutton" value="select all" />
	</fieldset>
	</div>
	</form>
% } else {
	<& "/tmpl/prepend:traffic_light", make_table => 1, args => {'hintmsg' => __('There are no final grades available.')} &>
% }
</nav>
<p class="timestamp"></p>
<div class="data">
	<img src="/graphics/icons/waiting_bar.gif" class="waiting" />
</div>

<%method jsarray>
% return ['jquery/jquery.min.js','gradesearch.js'];
</%method>

<%method stylearray>
% return ['/style/style.css','/style/gradesearch.css'];
</%method>

<%method title>
% 	return __("Final Grade Report");
</%method>
