<%perl>
	my $phone_info = $TUSK::Constants::Institution{Phone};
	if (scalar $phone_info > 0) {
	foreach my $contact_line (@{$TUSK::Constants::Institution{Phone}}) {                                                                                                                                                                                  print $contact_line . "<br>";                                                                                                                                                                                                       }    
	print "<br>";
	} else {
		print $TUSK::Constants::Institution{Phone} . "<br>";
