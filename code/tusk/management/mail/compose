<%init>

    my $selfpath = $m->comp("/tmpl/url:get_full_path");

	my $time_period = $m->comp("SELF:get_timeperiod_id");

	my $user = $m->session->{'user'};
    my @usergroups =  $course->sub_user_groups($time_period); 
	
</%init>

