<%method startup>
<%perl>
	my $selfpath = $m->comp("/tmpl/url:get_full_path");
	$data =  TUSK::Manage::Course::Students::show_pre_process(1, $course->primary_key(), $school, $time_period);

	if ($is_school_admin) {
		if ($course->associate_user_group()) {
			$m->comp('SELF:set_msg', type => 'hint',  msg => __("This course's enrollment is managed with User Group(s).  Please add student(s) to the appropriate User Group(s)."));
		} else {
			push @$buttons, { 
				link_txt    => '/management/course/students/addedit/' . $selfpath,
	                        display_txt => __('Add Course Student(s)')
                         };
		}

		if (scalar @{$data->{students}}) {
			push @$buttons, { link_txt    => '/management/course/students/teachingsites/' . $selfpath."/?timeperiod=".$time_period, display_txt => __('Update All Teaching Sites') };
		}
	} else {
		$m->comp('SELF:set_msg', type => 'hint',  msg => __('Please contact your School Admin to add student(s) to this course.'));
	}
</%perl>	
</%method>

<%method title>
% 	return __("Manage Course Students");
