<%init>
	
	my $lookupConditions;
	my @results;
	my @resultarray;
	my $search;

	if ($ARGS{action}){
		$lookupConditions = "";

		($search = $ARGS{simpleSearch}) =~ s/'/\\'/g;
		if($search) {
			$lookupConditions = "title like '\%$search\%'";
		}
		
		if($lookupConditions) {
			@results = HSDB45::Course->new( _school => $ARGS{'schl'} )->lookup_conditions($lookupConditions,"order by title");
		}
	}
</%init>


