% if (@logs) {
<h4>Log Errors</h4>
% foreach my $log (@logs) {
%	 if ($log->get_type =~ /(error)/) {
		<div class="<% $log->get_type %>"><% $log->get_type %> <% $log->get_message %></div>
% 	 }
% } # end foreach
<h4>Log Messages</h4>
% foreach my $log (@logs) {
	<div class="<% $log->get_type %>"> <% $log->get_message %></div>
% } 
% } # end if (@logs)
% if (@errMsgs) {
<h4> Import Errors </h4>
% 	foreach my $msg (@errMsgs) {
		<p class="importError"><% $msg %></p>
% 	}
% }

<%method title>
% return "Import Students";
</%method>

