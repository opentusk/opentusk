<script type="text/javascript" language="JavaScript">
	document.forms['login'].elements['user'].focus();
	function dimLogins(overObject) {
		// $('.loginButtons').css('background-color', '#CCCCCC');
		// overObject.style.backgroundColor = 'white';
	}
	function undimLogins() {
		// $('.loginButtons').css('background-color', 'white');
	}
	function displayLocalLogin() {
		$('#localLoginForm').hide();
		$('#localLoginButton').fadeOut( 'slow', function() { $('#localLoginForm').fadeIn(5000); } );
	}
</script>
