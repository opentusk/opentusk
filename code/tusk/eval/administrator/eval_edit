		<script type="text/javascript">
		function validateForm(form) {
			var str = form.eval_to_copy_2.value;
			if (str == null || str.length == 0) {
				return true;
			}

			if (isValidIdWithoutLeadingZeroes(form.eval_to_copy_2)) {
				return true;
			}
			return false;
		}
		</script>

